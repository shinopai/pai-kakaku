<%= render partial: 'shared/page_title', locals: { page_title: '' } %>

<!-- flash message -->
<%= render 'shared/flash_message' %>

<%= search_form_for @q, url: search_path, method: :get, class: 'search-form flex' do |search| %>
<%= search.search_field :name_or_description_gt, class: 'search-form__input--search', placeholder: '何をお探しですか？（製品名、説明）' %>
<%= search.submit '検索', class: 'search-form__input--submit' %>
<% end %>

<ul class="home-list flex">
  <% @categories.each do |category| %>
  <%= link_to all_items_by_category_path(category), class: 'contents' do %>
  <li class="home-list__item flex">
    <%= image_tag 'ico_category.jpg', class: 'home-list__item-ico' %>
    <p class="home-list__item-txt"><%= category.name %></p>
  </li>
  <% end %>
  <% end %>
</ul>

<ul class="home-links flex">
  <li class="home-links__item">
    <%= link_to 'メッセージ', '#' %>
  </li>
  <li class="home-links__item">
    <%= link_to '掲載情報について', '#' %>
  </li>
  <li class="home-links__item">
    <%= link_to '利用規約', '#' %>
  </li>
  <li class="home-links__item">
    <%= link_to '個人情報保護方針', '#' %>
  </li>
  <li class="home-links__item">
    <%= link_to 'サイトマップ', '#' %>
  </li>
  <li class="home-links__item">
    <%= link_to 'メーカー一覧', makers_path %>
  </li>
  <li class="home-links__item">
    <%= link_to 'お問い合わせ', '#' %>
  </li>
</ul>
